<!DOCTYPE html>
<html>
<head>
  <title>Armourer.js - Easy Debian security configuration</title>

  <!-- Viewport mobile tag for sensible mobile support -->
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


  <!--STYLES-->
  <link rel="stylesheet" href="/styles/bootstrap-theme.css">
  <link rel="stylesheet" href="/styles/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/style.css">
  <!--STYLES END-->
</head>

<body>

<!--SCRIPTS-->
<script src="/js/dependencies/sails.io.js"></script>
<script src="/js/dependencies/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<!--SCRIPTS END-->


<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
              aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Armourer</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li id="li_home"><a href="/">Home</a></li>
        <li id="li_servers"><a href="/servers">View servers</a></li>
        <li id="li_install_server"><a href="/server/new">Install a server</a></li>
      </ul>
    </div>
    <!--/.nav-collapse -->
  </div>
</nav>

<div class="container-fluid">

  <div class="starter-template">

    <%
    if('flash' in req){

      var flash_message = req.flash('message')
      var flash_error = req.flash('error')

    if(flash_message.length > 0){ %>

      <div class="row alert alert-info col-sm-offset-2 col-sm-8" role="alert"><strong>Message : </strong> <%- flash_message %> </div>

    <% }

    if(flash_error.length > 0){ %>

      <div class="row alert alert-danger col-sm-offset-2 col-sm-8" role="alert"><strong>Error : </strong> <%- flash_error %> </div>

    <% }
    }
    %>



    <div class="row">
      <%- body %>
    </div>


  </div>

</div>

</body>
</html>
